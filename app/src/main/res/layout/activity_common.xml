<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="22dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="@string/app_name"
                android:layout_marginLeft="15dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/tv_show_menu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_more"/>

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_show_tip"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="提示弹窗"
                    android:textColor="#232323"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_show_tip_no_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="提示弹窗（无标题）"
                    android:textColor="#232323"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_show_tip_no_title_single_yes"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="提示弹窗（只有确定）"
                    android:textColor="#232323"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_show_list"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="列表弹窗（选择效果）"
                    android:textColor="#232323"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_show_list_no_title_no_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="列表弹窗（菜单效果）"
                    android:textColor="#232323"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_show_loading"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="加载弹窗"
                    android:textColor="#232323"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_show_loading_no_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="加载弹窗(没有文字)"
                    android:textColor="#232323"
                    android:textSize="14sp" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</LinearLayout>
